<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:animateLayoutChanges="true"
    android:id="@+id/rooAccountWallet"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".ui.account_wallet.AccountWalletFragment">

    <TextView
        android:id="@+id/txtTittle"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@id/txtBudget"
        android:layout_width="match_parent"
        android:paddingTop="12dp"
        android:text="Mis cuentas"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

    <TextView
        android:id="@+id/txtBudget"
        android:layout_above="@+id/rcViewAccountsWallet"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-1dp"
        android:layout_marginEnd="3dp"
        android:layout_width="wrap_content"
        android:paddingTop="12dp"
        android:text="$2000"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="@android:color/holo_green_dark" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcViewAccountsWallet"
        android:layout_below="@id/txtTittle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

</RelativeLayout>
